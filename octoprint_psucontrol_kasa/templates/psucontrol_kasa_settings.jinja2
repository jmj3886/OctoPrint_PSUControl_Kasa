<form class="form-horizontal">
    <h4>General</h4>
    <div class="control-group">
        <label class="control-label">Plug Name:</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.psucontrol_kasa.alias" placeholder="MyPrinterPlug">
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="checkbox" data-bind="checked: settings.plugins.psucontrol_kasa.is_smart_strip">
        </div>
    </div>
    <div class="control-group" data-bind="visible: settings.plugins.psucontrol_kasa.is_smart_strip">
        <label class="control-label">Plug #:</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini" data-bind="value: settings.plugins.psucontrol_kasa.plug">
        </div>
    </div>
</form>
